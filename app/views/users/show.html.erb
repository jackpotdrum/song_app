<div class="main user-show">
  <div class="container">
    <div class="not-scroll">
      <div class="user">
      </div>
      <div class="tab-main">
        <ul class="tabs tabs-fixed-width tab-demo z-depth-1">
         <li class="tab"><a class="active" href="#test1">Test 1</a></li>
         <li class="tab"><a href="#test2">Test 2</a></li>
         <li class="tab"><a href="#test3">Test 3</a></li>
       </ul>
       <div id="test1" class="col s12">
         <p>Test 1</p>

       </div>
       <div id="test2" class="col s12">
         <p>Test 2</p>
       </div>
       <div id="test3" class="col s12">
         <p>Test 3</p>
       </div>
      </div>
      <div class="sub-user-image">
        <div class="user-image">
          <%= image_tag("/user_images/#{@user.image_name}", :size => "200x200") %>
          <% if @user.id == @current_user.id %>
            <%= form_tag("/users/#{@user.id}/myimage", {multipart: true}) do %>
              <div class="input-user-image">
                <p>ユーザー画像の設定</p>
                <input type="file" name="image_name">
                <input type="submit" value="投稿">
              </div>
            <% end %>
          <% end %>
          <p><%= @user.name %></p>
        </div>
        <div class="introduction">

        </div>
      </div>
    </div>
  </div>
</div>
