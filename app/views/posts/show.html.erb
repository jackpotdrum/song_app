<div class="main posts-show">
  <div class="container">
    <div class="posts-index-item">
      <div class="jacket-image">
        <%= image_tag("/jacket_images/#{@post.content_image}", :size => "200x200") %>
      </div>
      <div class="title">
        <h2><%= @post.content %></h2>
      </div>
      <div class="music">
        <%= audio_tag("/content_music/#{@post.content_music}", :controls => true) %>
      </div>
      <div class="destroy-content">
        <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
      </div>
    </div>
  </div>
</div>
